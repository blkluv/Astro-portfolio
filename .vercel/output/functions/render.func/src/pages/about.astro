---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.svelte";
import Footer from "../components/Footer.astro";
import TypeWriter from "../components/TypeWriter.svelte";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead
			title="Joe Malatesta"
			description="Personal website for Joe Malatesta, a software developer focused on new tech and self improvement"
		/>
	</head>
	<body>
		<Header client:load />
		<main class="mx-6 h-screen md:mx-32">
			<div class="flex items-center justify-center">
				<div
					class="hidden h-96 w-96 items-center justify-center rounded-full shadow-2xl ring-8 ring-red-500 md:flex"
				>
					<div
						class="flex h-80 w-80 items-center justify-center rounded-full shadow-2xl shadow-black ring-8 ring-cyan-700"
					>
						<div
							class="flex h-60 w-60 items-center justify-center rounded-full shadow-2xl shadow-black ring-8 ring-purple-500"
						>
							<div
								class="flex h-40 w-40 items-center justify-center rounded-full shadow-2xl shadow-black ring-8 ring-green-500"
							>
								<div
									class="flex h-20 w-20 items-center justify-center rounded-full shadow-2xl shadow-black ring-8 ring-emerald-600"
								>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
