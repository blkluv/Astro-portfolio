---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.svelte";
import Newsletter from "../components/Newsletter.svelte";
import Subscribe from "../components/subscribe.svelte";

export interface Props {
	content: {
		// Maybe want to add blog title vs website title
		title: string;
		description: string;
		pubDate?: string;
		heroImage?: string;
		imageAlt?: string;
		cardDescription?: string;
		twitterDescription?: string;
	};
}
const url = Astro.url.pathname;
const {
	content: {
		title,
		description,
		pubDate,
		heroImage,
		imageAlt,
		cardDescription,
		twitterDescription,
	},
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<!-- HEADER DOESN'T WORK ON THIS PAGE.. PLEASE TELL ME WHY -->
		<Header client:load />
		<main>
			<article
				class="prose-md prose prose-invert prose-indigo prose-quoteless mx-6 pb-5 md:prose-lg md:mx-auto"
			>
				<!-- Should Provide an Alt -->
				<!-- Don't really need an image -->
				<!-- {heroImage && <img class="object-cover" src={heroImage} alt={imageAlt} />} -->

				<!-- && means, show if pubDate has a value -->
				<div class="mt-4">
					{pubDate && <time>{pubDate}</time>}
					<h1>{title}</h1>
				</div>

				<!-- This is where the actual MD part goes. -->
				<slot />

				<!-- Add Twitter thing here -->
				<a
					target="_blank"
					class="spin-border flex h-10 w-fit items-center gap-2 rounded-full bg-indigo-400 px-2 text-black no-underline hover:bg-indigo-400/80"
					href=`https://twitter.com/intent/tweet?text=${twitterDescription ? twitterDescription : cardDescription} &url=joemmalatesta.com${url}&via=_joemalatesta`
					>Tweet<img src="/tweet.svg" alt="Twitter Icon" class="h-fit w-5" /></a
				>
			</article>
			<div class="my-3 flex items-center justify-center">
				<Subscribe client:load forPost={true} />
			</div>
		</main>
		<Footer />
	</body>
</html>
