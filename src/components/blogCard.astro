---
export interface Props {
	title: string;
	description: string;
	date: string;
}


const { title, description, date} = Astro.props;
---


<div class="container outline flex flex-col bg-gr">
    <h1 class="text-2xl font-bold">{title}</h1>
    <h3 class="text-sm text-gray-500/60">{date}</h3>
    <p class="text-lg">{description}</p>
</div>