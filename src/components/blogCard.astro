---
export interface Props {
	title: string;
	description: string;
	date: string;
    url: string;
}


const { title, description, date, url} = Astro.props;
---

<a href={url}>
<div class="container flex flex-col p-2 my-2 bg-gradient-to-tr from-violet-300 via-violet-200 to-white hover:from-violet-400 rounded-lg shadow-lg">
    <h1 class="text-xl font-bold">{title}</h1>
    <h3 class="text-sm text-gray-600/80">{date}</h3>
    <p class="text-md">{description}</p>
</div>
</a>

