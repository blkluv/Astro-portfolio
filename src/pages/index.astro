---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.svelte";
import Footer from "../components/Footer.astro";
import TypeWriter from "../components/TypeWriter.svelte";
import Blog from "../components/blog.svelte";
import Projects from "../components/project2.svelte";
import About from "../components/intro.astro";
import Contact from "../components/contact.svelte";

// Sorry about this...
const techPosts = (
	await Astro.glob("../pages/blog/programming/*.{md,mdx}")
).sort(
	(a, b) =>
		new Date(b.frontmatter.pubDate).valueOf() -
		new Date(a.frontmatter.pubDate).valueOf()
);
const improvementPosts = (
	await Astro.glob("../pages/blog/improvement/*.{md,mdx}")
).sort(
	(a, b) =>
		new Date(b.frontmatter.pubDate).valueOf() -
		new Date(a.frontmatter.pubDate).valueOf()
);
let quotes = [
	'"The only way to learn a new programming language is by writing programs in it." - Dennis Ritchie',
	'"Man cannot remake himself without suffering, for he is both the marble and the sculptor." - Alexis Carrel',
];
---

<!-- from-purple-400 to-pink-500 
nice gradient --><!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead
			title="Joe Malatesta"
			description="Personal website for Joe Malatesta, a software developer focused on new tech and self improvement"
		/>
	</head>
	<body>
		<Header client:load />
		<main>
			<!-- Main section -->
			<section class="">
				<div
					class="relative mt-2 flex flex-col items-center justify-center md:mt-6 md:flex-row"
				>
					<div class="flex flex-col items-center justify-center p-2 py-4 px-5">
						<h1
							class="poppins flex flex-col bg-gradient-to-r from-slate-200 to-indigo-400 bg-clip-text p-2 text-5xl font-semibold text-transparent md:block lg:p-5 lg:text-7xl"
						>
							Insipired by <span class="py-2"><TypeWriter client:load /></span>
						</h1>
					</div>
				</div>
			</section>

			<section class="lg:px-16">
				<About />
			</section>

			<section id="blog" class="py-9 lg:px-16">
				<Blog
					client:load
					postTypes={["Programming", "Improvement"]}
					posts={[techPosts, improvementPosts]}
					quotes={quotes}
				/>
			</section>

			<!-- Projects Section -->
			<section id="projects" class="px-4 py-9 lg:px-16">
				<Projects client:load />
			</section>

			<section id="contact" class="relative py-9 lg:px-16">
				<Contact client:load />
			</section>
			<Footer />
		</main>
	</body>
</html>
