---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.svelte";
import Footer from "../components/Footer.astro";
import TypeWriter from "../components/TypeWriter.svelte";
import ProjectCard from "../components/ProjectCard.svelte";
import Blog from "../components/blog.astro";
import Projects from "../components/projects.astro"
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead
			title="Joe Malatesta"
			description="Personal website for Joe Malatesta, a software developer focused on new tech and self improvement"
		/>
	</head>
	<body>
		<Header client:load />
		<main>
			<!-- Main section -->
			<section>
				<div class="md:mt-6 mt-2 flex flex-col items-center justify-center md:flex-row">
					<div class="flex flex-col items-center justify-center p-2 px-5">
						<h1
							class="m-2 bg-gradient-to-t from-purple-400 to-pink-500 bg-clip-text lg:p-5 pb-2 text-5xl font-bold text-transparent lg:text-7xl md:block flex flex-col"
						>
							Insipired by <span><TypeWriter client:load /></span>
						</h1>
					</div>
				</div>
			</section>

			<!-- Projects Section -->
			<section id="projects" class="mx-4 lg:mx-0">
				<Projects />
			</section>

			<!-- Blog Section -->
			<section id="blog" class="my-5">
				<Blog />
			</section>

			<!-- Disclaima -->
			<div class="text-center">
				<h5 class="mt-20 text-xl">If you're seeing this</h5>
				<h5 class="text-xl">This site is under construction...</h5>
			</div>
		</main>
		<Footer />
	</body>
</html>
